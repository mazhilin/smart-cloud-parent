<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.smart.cloud</groupId>
        <artifactId>smart-cloud-dependencies</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath/>
    </parent>
    <groupId>com.smart.cloud</groupId>
    <artifactId>smart-cloud-parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>smart-cloud-parent</name>
    <description>SmartCloud云服务内部依赖管理</description>
    <packaging>pom</packaging>
    <properties>
        <java.version>1.8</java.version>
        <smart-cloud.version>0.0.1-SNAPSHOT</smart-cloud.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <!--TurboCloud依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-dependencies</artifactId>
                <version>${smart-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>${netty.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-data-redis</artifactId>
                <version>${spring-boot.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>io.netty</groupId>
                        <artifactId>netty-*</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>io.lettuce</groupId>
                        <artifactId>lettuce-core</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
                        <artifactId>slf4j-api</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

            <dependency>
                <groupId>com.alibaba.nacos</groupId>
                <artifactId>nacos-client</artifactId>
                <version>${nacos.version}</version>
                <exclusions>
                    <exclusion>
                        <artifactId>guava</artifactId>
                        <groupId>com.google.guava</groupId>
                    </exclusion>
                    <exclusion>
                        <artifactId>netty</artifactId>
                        <groupId>io.netty</groupId>
                    </exclusion>
                    <exclusion>
                        <groupId>javax.servlet</groupId>
                        <artifactId>servlet-api</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
                        <artifactId>slf4j-api</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
                        <artifactId>slf4j-log4j12</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

            <!--smart-cloud-framework依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-boot</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-nacos</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-common依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-common-api</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-common-base</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-common-center</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-common-domain</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-common-web</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-datasource-boot</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-dubbo依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-dubbo-common</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-dubbo-provider</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-dubbo-consumer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-kafka依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-kafka-common</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-kafka-producer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-kafka-consumer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-redismq依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-redismq-common</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-redismq-producer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-redismq-consumer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-rocketmq依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-rocketmq-common</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-rocketmq-producer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-rocketmq-consumer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-pulsar依赖配置-->
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-pulsar-common</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-pulsar-producer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>
            <dependency>
                <groupId>com.smart.cloud</groupId>
                <artifactId>smart-cloud-pulsar-consumer</artifactId>
                <version>${smart-cloud.version}</version>
            </dependency>

            <!--smart-cloud-framework依赖配置-->
        </dependencies>
    </dependencyManagement>

   <modules>
       <module>smart-cloud-boot</module>
       <module>smart-cloud-common</module>
       <module>smart-cloud-component</module>
       <module>smart-cloud-framework</module>
       <module>smart-cloud-middleware</module>
       <module>smart-cloud-integration</module>
       <module>smart-cloud-starter</module>
       <module>smart-cloud-toolkit</module>
   </modules>



    <repositories>
        <repository>
            <id>central</id>
            <url>https://maven.aliyun.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>snapshots</id>
            <url>https://maven.aliyun.com/nexus/content/groups/public</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>rdc-releases</id>
            <url>https://packages.aliyun.com/maven/repository/2022020-release-dkLtZC/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>rdc-snapshots</id>
            <url>https://packages.aliyun.com/maven/repository/2022020-snapshot-3D7bcq/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <url>https://maven.aliyun.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>snapshots</id>
            <url>https://maven.aliyun.com/nexus/content/groups/public</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>rdc-releases</id>
            <url>https://packages.aliyun.com/maven/repository/2022020-release-dkLtZC/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>rdc-snapshots</id>
            <url>https://packages.aliyun.com/maven/repository/2022020-snapshot-3D7bcq/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>rdc-releases</id>
            <name>ReleasesProxy</name>
            <url>https://packages.aliyun.com/maven/repository/2022020-release-dkLtZC/</url>
        </repository>
        <snapshotRepository>
            <id>rdc-snapshots</id>
            <name>SnapshotsProxy</name>
            <url>https://packages.aliyun.com/maven/repository/2022020-snapshot-3D7bcq/</url>
        </snapshotRepository>

    </distributionManagement>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <fork>true</fork>
                    <mainClass>${start-class}</mainClass>
                    <layout>ZIP</layout>
                    <classifier>${project.version}</classifier>
                    <executable>false</executable>
                    <excludeDevtools>false</excludeDevtools>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
